
@{
    ViewData["Title"] = "Api User Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />
}
<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-12 col-sm-12 col-xs-12 text-left caption p-d-0">
        Api User Ayarları
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="dataTableApi">
                <thead>
                    <tr class="table_thead_back">
                        <th class="no-cursor">
                            Ad
                        </th>
                        <th class="no-cursor">
                            Soyad
                        </th>
                        <th class="no-cursor">
                            Email
                        </th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>



<!-- Modal content-->
<div class="modal fade" id="updateUserModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Api User Güncelle
                </h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label"> Rol Adı</label>
                        <select class="form-control" data-placeholder="Select..." tabindex="-1" title="" id="Role">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>
                </div>
             
            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnRoleUpdate">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
            <input type="hidden" id="userid">
        </div>

    </div>
</div>

@section scripts {
   
    <script type="text/javascript" src="~/js/apisettings/apisettings.js"></script>

}