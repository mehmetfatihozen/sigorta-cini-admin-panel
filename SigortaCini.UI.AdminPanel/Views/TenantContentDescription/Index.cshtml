
@{
    ViewData["Title"] = "Tenant Açıklama Parametreleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {

    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />


}
<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-4 col-sm-4 col-xs-4 text-left caption p-d-0">
        Açıklama Parametreleri
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right p-d-0">
        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="btnParameterAdd">
                <i class="fa fa-plus-circle pink-color"></i>
                Açıklama Ekle
            </a>

        </div>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="parameter_table">
                <thead>
                    <tr class="table_thead_back">

                        <th class="no-cursor">
                            Ad
                        </th>
                        <th class="no-cursor">
                            Tip
                        </th>
                        <th class="no-cursor">
                            Tenant
                        </th>
                        <th class="no-cursor">
                            Durum
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>



<!-- Modal content-->
<div class="modal fade" id="UpdateParameterModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Açıklama Güncelle

                </h4>
            </div>

            <div class="modal-body">
                <div class="form-group col-md-12">
                    <label class="control-label">Açıklama Adı</label>
                    <textarea placeholder="Açıklama Adı" rows="3" id="parameter_name_update" class="form-control no-resize"></textarea>
                </div>
                <div class="col-md-12 p-d-0 hr"></div>

                <div class="form-group col-md-12">
                        <label class="control-label">Tip</label>
                        <select class="form-control" id="parameter_type_update">
                            <option value="">Seçiniz</option>
                        </select>
                   
                </div>

                <div class="col-md-12 p-d-0 hr"></div>

                <div class="form-group col-md-12 p-d-0">
                    <div class="col-md-6">
                        <label class="control-label">Tenant</label>
                        <select class="form-control" id="parameter_tenant_update">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Aktif</label>
                        <div class=" col-md-12 form-group checkbox checkbox-success margin-left-22">
                            <input id="IsParameterActiveUpdate" type="checkbox">
                            <label for="IsParameterActiveUpdate">
                                Evet
                            </label>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12 p-d-0 hr"></div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="parameterUpdate">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
            <input type="hidden" id="parameterId">
        </div>

    </div>

</div>

<div class="modal fade" id="AddParameterModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Açıklama Ekle

                </h4>
            </div>

            <div class="modal-body">
                <div class="form-group col-md-12">
                    <label class="control-label">Açıklama Adı</label>
                    <textarea placeholder="Açıklama Adı" rows="3" id="parameter_name" class="form-control no-resize"></textarea>
                </div>
                <div class="col-md-12 p-d-0 hr"></div>

                <div class="form-group col-md-12">
                        <label class="control-label">Tip</label>
                        <select class="form-control" id="parameter_type">
                            <option value="">Seçiniz</option>
                        </select>
                   
                </div>

                <div class="col-md-12 p-d-0 hr"></div>

                <div class="form-group col-md-12 p-d-0">
                    <div class="col-md-6">
                        <label class="control-label">Tenant</label>
                        <select class="form-control" id="parameter_tenant">
                            <option value="">Seçiniz</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Aktif</label>
                        <div class=" col-md-12 form-group checkbox checkbox-success margin-left-22">
                            <input id="IsParameterActive" type="checkbox">
                            <label for="IsParameterActive">
                                Evet
                            </label>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-12 p-d-0 hr"></div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="parameterAdd">Ekle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>

        </div>

    </div>
</div>


@section scripts {
   
    <script type="text/javascript" src="~/js/parameters/tenantparameters/description.js"></script>

}