                        <input type="password" placeholder="Şifre" id="userPassword" class="form-control" maxlength="25">
                    </div>

                    <div class="form-group">
                        <label class="control-label">İşe Başlama Tarihi</label>
                        <input type="text" placeholder="__-__-____" id="start_date" errMessage="İşe başlama tarihini boş geçmeyiniz" class="form-control mustFill">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Rol</label>
                        <select class="form-control" id="ddlRoleType">
