                        <label for="userIsAzureEnabled">
                            Azure Kullanıcısı
                        </label>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-3 checkbox checkbox-success userIsOtpEnabledDiv margin-top-0">
                        <input id="userIsOtpEnabled" type="checkbox">
                        <label for="userIsOtpEnabled">
                            Otp Aktif
                        </label>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-3 checkbox checkbox-success userIsActiveDiv margin-top-0">
                        <input id="userIsActive" type="checkbox">
                        <label for="userIsActive">
                            Kullanıcı Aktif
                        </label>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-3 checkbox checkbox-success adminLoginIsActiveDiv margin-top-0">
                        <input id="adminLoginIsActive" type="checkbox">
                        <label for="adminLoginIsActive">
                            Admin' e Giriş
                        </label>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnUserUpdate">Kaydet</button>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
            <input type="hidden" id="userUpdateId">
        </div>

    </div>

</div>

