                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Diğer Roller</label>
                        <select class="form-control" id="otherRollesUpdate" data-placeholder="Seçiniz..." multiple="multiple"></select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Sadece Kendi Taskları Mı ?</label>
                        <div class="checkbox checkbox-success margin-left-22">
                            <input id="OwnTasksUpdate" type="checkbox">
                            <label for="OwnTasksUpdate">
                                Evet
                            </label>
                        </div>

                    </div>
                    <div class="form-group p-t-3">
                        <label class="control-label">Kullanıcı Kodu</label>
                        <input type="text" placeholder="Kullanıcı Kodu" disabled="disabled" id="UserCodeUpdate" class="form-control">
                    </div>

                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">Soyad</label>
                        <input type="text" placeholder="Soyad" id="userPersonSurname" errMessage="Soyad boş geçmeyiniz" class="form-control mustFill" maxlength="40">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Cep Telefonu</label>
                        <input type="tel" placeholder="0(___) ___-____" id="userGsmNo" errMessage="Cep Telefonu boş geçmeyiniz" autocomplete="off" class="form-control mustFill">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Yeniden Şifre</label>
                        <input type="password" placeholder="Yeniden Şifre" id="userRePassword" class="form-control" maxlength="25">
