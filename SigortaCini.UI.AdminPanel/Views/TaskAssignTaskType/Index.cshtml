
@{
    ViewData["Title"] = "Task İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />

}
<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-4 col-sm-4 col-xs-4 text-left caption p-d-0">
        Task İşlemleri
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right p-d-0">
        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="btnRoleOpenModal">
                <i class="fa fa-plus-circle pink-color"></i>
                Task Ekle
            </a>
        </div>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="taskAssignTypes">
                <thead>
                    <tr class="table_thead_back">


                        <th class="no-cursor">
                            Görev Tipi
                        </th>
                        <th class="no-cursor">
                            Durumu
                        </th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal content-->
<div class="modal fade" id="myModalRole" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Görev Ekle
                </h4>
            </div>
            <div class="modal-body">


                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Görev Tipi</label>
                        <input type="text" class="form-control input" placeholder="Görev Tipi" id="TaskAssignTaskTypeName">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success AssignIsActiveDiv padding-left-36">
                            <input type="checkbox" id="TaskAssignTaskTypeState">
                            <label for="TaskAssignTaskTypeState">Evet</label>
                        </div>
                    </div>
                </div>

               
                
            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnTaskAdd">Ekle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>

    </div>
</div>


<!-- Modal content-->
<div class="modal fade" id="myModalRoleUpdate" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Görev Güncelle
                </h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Görev Tipi</label>
                        <input type="text" class="form-control input" placeholder="Görev Tipi" id="TaskAssignTaskTypeNameUpdate">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success AssignIsActiveUpdateDiv padding-left-36">
                            <input type="checkbox" id="TaskAssignTaskTypeStateUpdate">
                            <label for="TaskAssignTaskTypeStateUpdate">Evet</label>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnTaskUpdate">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
            <input type="hidden" id="TaskTypeId">
        </div>

    </div>
</div>

@section scripts {
 
    <script type="text/javascript" src="~/js/parameters/taskparameters/assign/assign.js"></script>

}