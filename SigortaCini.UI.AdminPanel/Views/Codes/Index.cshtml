
@{
    ViewData["Title"] = "Kampanya Kodu İşlemleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />

}
<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-4 col-sm-4 col-xs-4 text-left caption p-d-0">
        Kampanya Kodu İşlemleri
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right p-d-0">
        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="btnCodeAdd">
                <i class="fa fa-plus-circle pink-color"></i>
                Kampanya Kodu Ekle
            </a>
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="btnpr">
                <i class="fa fa-chain pink-color"></i>
                Organizasyon Seç
            </a>
        </div>
    </div>
</div>
<div class="modal fade" id="codeModala" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Organizasyon
                </h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Organizasyon</label>
                        <select class="form-control" data-placeholder="Seçiniz..." tabindex="-1" id="organ">
                            <option value="">Seçiniz</option>
                        </select>

                    </div>
                </div>
               
                <input type="hidden" id="codeId" />
            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" disabled="disabled" id="btnAddCode">Getir</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="codeTable">
                <thead>
                    <tr class="table_thead_back">


                        <th class="no-cursor">
                            Kampanya Kodu
                        </th>
                        <th class="no-cursor">
                            Durum
                        </th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>


        </div>
    </div>
</div>

<input type="hidden" id="userId" />
<!-- Modal content-->
<div class="modal fade" id="codeModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Kampanya Kodu Ekle
                </h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Kampanya Kodu</label>
                        <input class="form-control input" placeholder="Kampanya Kodu" id="campaign_code_new" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success CampaignIsActiveDiv padding-left-36">
                            <input type="checkbox" id="CampaignIsActive">
                            <label for="CampaignIsActive">Evet</label>
                        </div>
                    </div>
                </div>
               
            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnAddCodesfor">Ekle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="codeModalUpdate" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Kampanya Kodu Güncelle
                </h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Kampanya Kodu</label>
                        <input class="form-control input" placeholder="Kampanya Kodu" id="campaign_code_update" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success CampaignIsActiveUpdateDiv padding-left-36">
                            <input type="checkbox" id="CampaignIsUpdateActive">
                            <label for="CampaignIsUpdateActive">Evet</label>
                        </div>
                    </div>
                </div>

                <input type="hidden" id="ccode" />


            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnUpdateCodesfor">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
   
    <script type="text/javascript" src="~/js/codes/codes.js"></script>

}