
@{
    ViewData["Title"] = "Meslek";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {

    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />
}



<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-4 col-sm-4 col-xs-4 text-left caption p-d-0">
        Meslekler
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right p-d-0">
        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="btnOpenModal">
                <i class="fa fa-plus-circle pink-color"></i>
                Meslek Ekle
            </a>
        </div>
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box">
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6 form-group">
                    <label>Ürün</label>
                    <select class="form-control" data-placeholder="Seçiniz..." id="filterProduct"></select>
                    <br />
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6 form-group margin-top-25 text-center">
                    <button id="btnList" class="btn btn-success border-8-radius">Listele</button>
                    <button id="btnClear" class="btn btn-warning border-8-radius">Temizle</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover " id="sample_2">
                <thead>
                    <tr class="table_thead_back">

                        <th class="no-cursor">
                            Meslek
                        </th>
                        <th class="no-cursor">
                            Ürün
                        </th>
                        <th class="no-cursor">
                            Durumu
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>





<div class="modal fade" id="myModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Meslek Ekle
                </h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label"> Meslek Adı</label>
                        <input type="text" class="form-control input" placeholder="Meslek Adı" id="professionName" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Ürün</label>
                        <select class="form-control" id="addModalProducts"></select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success professionIsActiveDiv padding-left-36">
                            <input type="checkbox" id="professionIsActive">
                            <label for="professionIsActive">Evet</label>
                        </div>
                    </div>
                </div>


            </div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnProfessionAdd">Ekle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="updateModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Meslek Güncelle
                </h4>
            </div>
            <div class="modal-body">



                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label"> Meslek Adı</label>
                        <input type="text" class="form-control input" placeholder="Meslek Adı" id="professionNameUpdate" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <select class="form-control" id="updateModalProducts"></select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success professionIsActiveDivUpdate padding-left-36">
                            <input type="checkbox" id="professionIsActiveUpdate">
                            <label for="professionIsActiveUpdate">Evet</label>
                        </div>
                    </div>
                </div>


                <input type="hidden" id="professionIdUpdate">
            </div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnProfessionUpdate">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {

    <script type="text/javascript" src="~/js/parameters/professionparameters/profession.js"></script>

}