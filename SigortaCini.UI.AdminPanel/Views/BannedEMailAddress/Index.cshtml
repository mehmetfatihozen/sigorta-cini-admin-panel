
@{
    ViewData["Title"] = "Engellenen Mail Adresleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />
}

<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-4 col-sm-4 col-xs-4 text-left caption p-d-0">
        Engellenen Mail Adresleri
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right p-d-0">
        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="showAddModal">
                <i class="fa fa-plus-circle pink-color"></i>Ekle
            </a>
        </div>
    </div>
</div>

<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="table">
                <thead>
                    <tr class="table_thead_back">
                        <th class="no-cursor">
                            Id
                        </th>
                        <th class="no-cursor">
                            Mail Adresi
                        </th>
                        <th class="no-cursor">
                            Durum
                        </th>
                        <th class="no-cursor">
                            Eklenme Tarihi
                        </th>
                        <th class="no-cursor">
                            Güncellenme Tarihi
                        </th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="addModal" role="dialog" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Mail Adresi Ekle
                </h4>
            </div>

            <div class="modal-body">
                <div class="form-group col-md-12">
                    <label class="control-label">Mail Adresi</label>
                    <input type="text" id="eMailAddressAdd" class="form-control">
                </div>
            </div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnAdd">Ekle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="updateModal" role="dialog" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Mail Adresi Güncelle
                </h4>
            </div>

            <div class="modal-body">
                <div class="form-group col-md-12">
                    <label class="control-label">Mail Adresi</label>
                    <input type="text" id="eMailAddressUpdate" class="form-control">
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Engelli mi?</label>
                    <div class=" col-md-12 form-group checkbox checkbox-success margin-left-22">
                        <input id="stateUpdate" type="checkbox">
                        <label for="stateUpdate">
                            Evet
                        </label>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnUpdate">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>

            <input type="hidden" id="bannedEMailAddressId">

        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/bannedemailaddress/bannedemailaddress.js"></script>
    <script src="~/daterangepicker/js/moment.min.js"></script>
    <script src="~/daterangepicker/js/datetime-moment.js"></script>
}