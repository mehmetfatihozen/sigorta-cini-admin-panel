
@{
    ViewData["Title"] = "Araç Tipleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
  
    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />

}<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-4 col-sm-4 col-xs-4 text-left caption p-d-0">
        Araç Tipleri
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-right p-d-0">
        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-sm bg-black" id="btnVehicleTypeOpenModal">
                <i class="fa fa-plus-circle pink-color"></i>
                Araç Tipi Ekle
            </a>
        </div>
    </div>
</div>
<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="sampleVehicleType_2">
                <thead>
                    <tr class="table_thead_back">


                        <th class="no-cursor">
                            Kod
                        </th>
                        <th class="no-cursor">
                            İsim
                        </th>
                        <th class="no-cursor">
                            Açıklama
                        </th>
                        <th class="no-cursor">
                            Durum
                        </th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal content-->
<div class="modal fade" id="myModalVehicleType" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Araç Tipi Ekle
                </h4>
            </div>
            <div class="modal-body">



                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Araç Tipi Kodu</label>
                        <input type="text" class="form-control input" placeholder="Araç Tipi Kodu" id="VehicleTypeCode">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Araç Tipi Adı</label>
                        <input type="text" class="form-control input" placeholder="Araç Tipi Adı" id="VehicleTypeName">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Araç Tipi Açıklaması</label>
                        <input type="text" class="form-control input" placeholder="Araç Tipi Açıklaması" id="VehicleTypeDesc">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success VehicleTypeIsActiveDiv padding-left-36">
                            <input type="checkbox" id="VehicleTypeIsActive">
                            <label for="VehicleTypeIsActive">Evet</label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnVehicleTypeAdd">Ekle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal content-->
<div class="modal fade" id="myModalVehicleTypeUpdate" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">
                    Araç Tipi Güncelle
                </h4>
            </div>
            <div class="modal-body">



                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Araç Tipi Kodu</label>
                        <input type="text" class="form-control input" placeholder="Araç Tipi Kodu" id="VehicleTypeCodeUpdate">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Araç Tipi Adı</label>
                        <input type="text" class="form-control input" placeholder="Araç Tipi Adı" id="VehicleTypeNameUpdate">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Araç Tipi Açıklaması</label>
                        <input type="text" class="form-control input" placeholder="Araç Tipi Açıklaması" id="VehicleTypeDescUpdate">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success VehicleTypeIsActiveDivUpdate padding-left-36">
                            <input type="checkbox" id="VehicleTypeIsActiveUpdate">
                            <label for="VehicleTypeIsActiveUpdate">Evet</label>
                        </div>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnVehicleTypeUpdate">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>

            <input type="hidden" id="VehicleTypeId">
        </div>

    </div>
</div>


@section scripts {
   
    <script type="text/javascript" src="~/js/parameters/vehicleparameters/vehicletype/vehicletype.js"></script>

}

