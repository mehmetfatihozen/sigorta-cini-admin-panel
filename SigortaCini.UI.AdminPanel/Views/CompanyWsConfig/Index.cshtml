
@{
    ViewData["Title"] = "(MQ) Servis Ayarları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {

    <link rel="stylesheet" type="text/css" href="~/css/temp.css" />

}


<div class="col-md-12 col-sm-12 col-xs-12 row top_band">
    <div class="col-md-12 col-sm-12 col-xs-12 text-left caption p-d-0">
        (MQ) Servis Ayarları
    </div>

</div>

<div class="col-md-12 col-sm-12 col-xs-12 row">
    <div class="portlet box yellow">
        <div class="portlet-body">
                <div class="form-group">
                    <label>Şirket Seçiniz</label>
                    <select class="form-control ddlCompaniesWsConfig" data-placeholder="Select..." tabindex="-1" title="" id="ddlCompaniesWsConfig">
                        <option value="">Seçiniz</option>
                    </select>
                </div>

                <div class="form-group wsConfigDatatableDiv" style="display:none">
                    <table class="table table-striped table-bordered table-hover" id="dataTableCompanyWsConfig">
                        <thead>
                            <tr class="table_thead_back">

                                <th class="no-cursor">
                                    Ürün
                                </th>
                                <th class="no-cursor">
                                    Şirket
                                </th>

                                <th class="no-cursor">
                                    Aktif
                                </th>
                                <th class="no-cursor">
                                    Key
                                </th>
                                <th class="no-cursor">
                                    Value
                                </th>

                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <div class="form-group hide" id="alt_no_data_content">
                    <div>
                        Sonuç Bulunamadı
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Modal content-->
<div class="modal fade" id="wsConfigModal" role="dialog" style="display: none;">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <i class="fa fa-times modal-close-icon" data-dismiss="modal"></i>
                <h4 class="modal-title">Ayarlar</h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Ürün</label>
                        <input type="text" class="form-control input" disabled="disabled" placeholder="Ürün" id="wsConfigProductName">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Şirket</label>
                        <input type="text" class="form-control input" disabled="disabled" placeholder="Şirket" id="wsConfigCompanyName">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Key</label>
                        <input type="text" class="form-control input" disabled="disabled" placeholder="Key" id="wsConfigKey">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Value</label>
                        <input type="text" class="form-control input" placeholder="Value" id="wsConfigValue">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group col-md-12">
                        <label class="control-label">Aktif</label>
                        <div class="checkbox checkbox-success wsConfigIsActiveDiv padding-left-36">
                            <input type="checkbox" id="wsConfigIsActive">
                            <label for="wsConfigIsActive">Evet</label>
                        </div>
                    </div>
                </div>
              


            </div>
            <div class="modal-footer">
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-left width-100 fnt-14" id="btnwsConfigSave">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger pull-right width-100 fnt-14" data-dismiss="modal">Kapat</button>
                </div>
            </div>
            <input type="hidden" id="wsConfigId">
            <input type="hidden" id="wsConfigProductId">
            <input type="hidden" id="wsCompanyId">
        </div>

    </div>
</div>

@section scripts {
   
    <script src="~/js/company/wsConfig/wsConfig.js"></script>
    
}
