
@{
    ViewData["Title"] = "Online Site Analizi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/metronic/assets/global/plugins/mychartjs/Chart.min.css" rel="stylesheet" type="text/css">

<div class="col-md-12 col-sm-12 col-xs-12  top_band">
    <div class="col-md-2 col-sm-2 col-xs-2 text-left caption p-d-0">
        Online Site Analizi
    </div>
    <div class="col-md-8 col-sm-8 col-xs-8 text-center caption p-d-0 clicky-info">
        <i class="glyphicon glyphicon-info-sign"></i>
        Aşağıda verilen veriler <a href="https://clicky.com/" target="_blank"  rel="noopener noreferrer">Clicky</a> aracılığı ile sağlanmaktadır ve 60 saniyede bir veriler yenilenmektedir. <a id="refresh_manuel">Buraya</a> tıklayarak manuel olarak yenileyebilirsiniz.
    </div>
    <div class="col-md-2 col-sm-2 col-xs-2 text-right caption p-d-0">
        <div class="counter"></div>
    </div>

</div>


<br />
<div class="col-md-12 col-sm-12 col-xs-12">

    <ul class="nav nav-pills nav-justified">
        <li class="active border-1-black"><a data-toggle="pill" href="#st">GENEL DURUM</a></li>
        <li class="border-1-black"><a data-toggle="pill" href="#vs">ZİYARETÇİ DETAY</a></li>
        <li class="border-1-black"><a data-toggle="pill" href="#gr">GRAFİKSEL GÖSTERİM</a></li>
    </ul>

</div>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="portlet box yellow">
        <div class="portlet-body">
            <div class="tab-content">
                <div id="st" class="tab-pane fade in active">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="dbox dbox--color-1">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-globe"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="liveUserCount" class="dbox__count">-</span>
                                    <span class="dbox__title">Anlık Kullanıcı Sayısı</span>
                                </div>

                                <div class="dbox__action">

                                    <button data-toggle="tooltip" title="Şu anda sitede etkin olan ziyaretçi sayısı." class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="dbox dbox--color-2">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-user"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="sumUserCount" class="dbox__count">-</span>
                                    <span class="dbox__title">Toplam Kullanıcı Sayısı</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Siteye giren(zaman kısıtlaması olmadan)toplam ziyaretçi sayısı." class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="dbox dbox--color-1">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-sort"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="actionsCount" class="dbox__count">-</span>
                                    <span class="dbox__title">Aksiyon Sayısı</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Ziyaretçi işlemlerinin sayısı (sayfa görüntüleme sayısı, indirme ve giden bağlantıların toplamı)" class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="dbox dbox--color-2">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-sort-by-alphabet"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="actionsAverageCount" class="dbox__count">-</span>
                                    <span class="dbox__title">Ortalama Aksiyon Sayısı</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Ziyaretçi başına ortalama işlem sayısı" class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="dbox dbox--color-3">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-time"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="timeAverageCount" class="dbox__count">-</span>
                                    <span class="dbox__title">Ortalama Zaman Sayısı</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Ziyaretçi başına sitede geçirilen ortalama süre(dakika cinsinden)" class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="dbox dbox--color-1">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-dashboard"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="timeTotalCount" class="dbox__count">-</span>
                                    <span class="dbox__title">Toplam Zaman</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Sitenizde tüm ziyaretçilerin bir araya getirdiği toplam süre (dakika cinsinden)" class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dbox dbox--color-2">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-log-out"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="bounceRate" class="dbox__count">-</span>
                                    <span class="dbox__title">Hemen Çıkma Oranı</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Yalnızca bir sayfayı görüntüleyen ziyaretçilerin yüzdesi" class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dbox dbox--color-3">
                                <div class="dbox__icon">
                                    <i class="glyphicon glyphicon-search"></i>
                                </div>
                                <div class="dbox__body">
                                    <span id="searches" class="dbox__count">-</span>
                                    <span class="dbox__title">Arama Parametreleri</span>
                                </div>

                                <div class="dbox__action">
                                    <button data-toggle="tooltip" title="Sitenizdeki tam arama sorguları" class="dbox__action__btn">Daha Fazla</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="vs" class="tab-pane fade">
                            <table class="table table-striped table-bordered table-hover" id="visitors_table">
                                <thead>
                                    <tr class="table_thead_back">
                                        @*<th class="no-cursor">
                            Ip Adresi
                        </th>*@
                                        <th class="no-cursor">
                                            Lokasyon
                                        </th>
                                        <th class="no-cursor">
                                            Giriş Sayfası
                                        </th>
                                        <th class="no-cursor">
                                            Browser
                                        </th>
                                        <th class="no-cursor">
                                            İşletim Sistemi
                                        </th>
                                        <th class="no-cursor">
                                            Ekran Boyutu
                                        </th>
                                        <th class="no-cursor">
                                            Dil
                                        </th>
                                        <th class="no-cursor">
                                            Yönlendirme
                                        </th>
                                        <th class="no-cursor">
                                            Yönlendiren Url
                                        </th>
                                        <th class="no-cursor">
                                            Yönlendiren Alan Adı
                                        </th>
                                        <th class="no-cursor">
                                            Sağlayıcı
                                        </th>
                                        <th class="no-cursor">
                                            Tarih
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                </div>
                <div id="gr" class="tab-pane fade">



                        <div class="row mt-5">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single-chart-clicky rounded  p-3">
                                    <div class="chart-container position-relative">
                                            <canvas id="action-canvas"></canvas>
                                    </div>

                                </div>
                            </div>
                            </div>
                    <div class="row mt-5">


                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single-chart-clicky rounded  p-3">
                                    <div class="chart-container position-relative">
                                        <canvas id="user-canvas"></canvas>
                                    </div>

                                </div>
                            </div>
                        </div>


               



                </div>
            </div>




        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/clicky/clicky.js"></script>
    <script type="text/javascript" src="~/metronic/assets/global/plugins/mychartjs/Chart.min.js"></script>
}
